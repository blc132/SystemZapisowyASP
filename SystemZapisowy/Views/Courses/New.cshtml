@model SystemZapisowy.ViewModels.NewCourseViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (@Html.BeginForm("Create", "Courses"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Name)
        @Html.TextBoxFor(m => m.Course.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Course.FieldOfStudyId)
        @Html.DropDownListFor(m => m.Course.SemesterId, new SelectList(Model.FieldsOfStudy, "FieldOfStudyId", "FieldOfStudy"), "Select the field of study" , new { @class = "form-control" })
        @Html.TextBoxFor(m => m.Course.FieldOfStudyId, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Course.SemesterId)
        @Html.TextBoxFor(m => m.Course.SemesterId, new { @class = "form-control" })
    </div>
}
