<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("ECTS--", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                @if (Session["Type"] == null)
                {
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                }
                @if (Session["Type"] == "Administrator")
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Student", "RegisterStudent", "Account")</li>
                            <li>@Html.ActionLink("Employee", "RegisterEmployee", "Account")</li>
                            <li>@Html.ActionLink("Administrator", "RegisterAdministrator", "Account")</li>
                            <li>@Html.ActionLink("Course", "New", "Courses")</li>
                        </ul>
                    </li>
                }
                else if (Session["Type"] == "Employee")
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Student", "RegisterStudent", "Account")</li>
                            <li>@Html.ActionLink("Employee", "RegisterEmployee", "Account")</li>
                            <li>@Html.ActionLink("Course", "New", "Courses")</li>
                        </ul>
                    </li>
                }
                else if (Session["Type"] == "Student")
                {
                }

            </ul>
        </div>
    </div>
